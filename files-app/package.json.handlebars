{
  "name": "@{{profile.npmjs_organization}}/{{repository.prefix.github}}{{slug}}",
  "description": "{{description}}",
  "license": "{{license}}",
  "author": "{{author.name}} <{{author.email}}> ({{link.home}})",
  "homepage": "{{link.home}}",
  "type": "module",
  "repository": {
    "type": "git",
    "url": "git+{{repository.github}}.git"
  },
  "bugs": {
    "email": "{{email.help}}",
    "url": "{{repository.gitlab}}{{repository.location.issues.gitlab}}"
  },
  "version": "0.0.1",
  "scripts": {
    "help": "task --list",
    "preinstall": "npx -y only-allow-pnpm",
    "prepare": "task common:husky",
    "start": "bash .start.sh"
  },
  "config": {
    "commitizen": {
      "path": "cz-conventional-changelog"
    }
  },
  "dependencies": {
    "tslib": "^2.3.1",
    "class-transformer": "^0.4.0",
    "class-validator": "^0.13.1"
  },
  "devDependencies": {
    "@commitlint/config-conventional": "^13.1.0",
    "@megabytelabs/eslint-config": "^1.0.67",
    "@megabytelabs/jest-preset": "^1.0.0",
    "@megabytelabs/prettier-config": "^14.14.14",
    "cz-conventional-changelog": "^3.3.0"
  },
  "engines": {
    "node": ">=10"
  },
  "eslintConfig": {
    "extends": "@megabytelabs/eslint-config"
  },
  "funding": [
    {
      "type": "opencollective",
      "url": "{{profile_link.opencollective}}/{{profile.opencollective}}"
    },
    {
      "type": "patreon",
      "url": "{{profile_link.patreon}}/{{profile.patreon}}"
    }
  ],
  "keywords": [
    "angular",
    "chrome",
    "extension",
    "firefox",
    "electron",
    "android",
    "ios",
    "rxjs"
  ],
  "lint-staged": {
    "**/*": [
      "blocklint --wordlist blacklist,slave,whitelist",
      "check-merge-conflict",
      "check-added-large-files",
      "check-symlinks",
      "destroyed-symlinks"
    ],
    "**/*.(css|html|less|md|mjml|php|scss|sh|xml)": [
      "task fix:prettier --"
    ],
    "**/*.json": [
      "task fix:json --"
    ],
    "**/*.(js|jsx|ts)": [
      "task fix:js --",
      "task lint:js --"
    ],
    "**/*.sh": [
      "task fix:shell --",
      "task lint:shell --"
    ],
    "**/*.toml": [
      "task lint:toml --"
    ],
    "**/*.xml": [
      "task fix:xml --",
      "task lint:xml --"
    ],
    "**/*.yml": [
      "task fix:yaml --",
      "task lint:yaml --"
    ],
    "**/*.(jpg|png)": [
      "task image:compress --"
    ],
    "logo.png": [
      "task image:resize -- 200 200",
      "task image:compress --"
    ],
    "requirements.txt": [
      "requirements-txt-fixer"
    ]
  },
  "prettier": "@megabytelabs/prettier-config",
  "standard-version": {
    "scripts": {
      "prerelease": "git add --all"
    }
  },
  "private": "{{ npm_private }}",
  "files": [
    "!**/*.json",
    "!**/*.spec*",
    "dist",
    "CHANGELOG.md",
    "CONTRIBUTING.md",
    "LICENSE",
    "README.md"
  ],
  "main": "dist/main.js",
  "typings": "dist/main.d.ts",
  "jest": {
    "preset": "@megabytelabs/jest-preset",
    "reporters": [
      "default",
      [
        "jest-html-reporters",
        {
          "filename": "index.html",
          "logoImgPath": "./.common/assets/logo-icon-square-200x200.png",
          "openReport": true,
          "pageTitle": "Code Coverage Report",
          "publicPath": "./coverage"
        }
      ]
    ]
  },
  "publishConfig": {
    "access": "{{ npm_publish_config_access }}"
  },
  "nodemonConfig": {
    "exec": "nest build && node --inspect-brk dist/main",
    "ext": "js,jsx,json,ts,yml",
    "ignore": [
      "src/**/*.spec.ts"
    ],
    "watch": [
      ".env",
      "src"
    ]
  }
}
