{
  "private": "{{ npm_private }}",
  "files": [
    "!**/*.json",
    "!**/*.spec*",
    "dist",
    "CHANGELOG.md",
    "CONTRIBUTING.md",
    "LICENSE",
    "README.md"
  ],
  "main": "dist/main.js",
  "scripts": {},
  "typings": "dist/main.d.ts",
  "dependencies": {
    "class-transformer": "^0.4.0",
    "class-validator": "^0.13.1"
  },
  "devDependencies": {
    "@megabytelabs/eslint-config": "^1.0.67",
    "@megabytelabs/jest-preset": "^1.0.0"
  },
  "jest": {
    "preset": "@megabytelabs/jest-preset",
    "reporters": [
      "default",
      [
        "jest-html-reporters",
        {
          "filename": "index.html",
          "logoImgPath": "./.common/assets/logo-icon-square-200x200.png",
          "openReport": true,
          "pageTitle": "Code Coverage Report",
          "publicPath": "./coverage"
        }
      ]
    ]
  },
  "keywords": [
    "angular",
    "chrome",
    "extension",
    "firefox",
    "electron",
    "android",
    "ios",
    "rxjs"
  ],
  "publishConfig": {
    "access": "{{ npm_publish_config_access }}"
  },
  "nodemonConfig": {
    "exec": "nest build && node --inspect-brk dist/main",
    "ext": "js,jsx,json,ts,yml",
    "ignore": [
      "src/**/*.spec.ts"
    ],
    "watch": [
      ".env",
      "src"
    ]
  }
}
