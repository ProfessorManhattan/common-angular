{
  "private": false,
  "name": "@installdoc/common-angular",
  "version": "0.0.1",
  "description": "Common Angular files and awesome boilerplate code that feeds a large group of repositories",
  "license": "MIT",
  "author": "Brian Zalewski <brian@megabyte.space> (https://megabyte.space)",
  "homepage": "https://megabyte.space",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/ProfessorManhattan/common-angular.git"
  },
  "bugs": {
    "email": "help@megabyte.space",
    "url": "https://gitlab.com/megabyte-labs/common/angular/-/issues"
  },
  "type": "module",
  "scripts": {
    "help": "task --list",
    "prepare": "task common:husky",
    "repair": "bash <(curl -sS https://install.doctor/repair)",
    "start": "bash .config/start.sh"
  },
  "config": {
    "commitizen": {
      "path": "node_modules/cz-emoji-conventional"
    }
  },
  "dependencies": {},
  "optionalDependencies": {},
  "devDependencies": {
    "@washingtondc/development": "^1.0.2",
    "@washingtondc/prettier": "^1.0.0",
    "@washingtondc/release": "^0.0.2",
    "eslint-config-strict-mode": "^1.0.0",
    "sleekfast": "^0.0.1"
  },
  "keywords": [
    "angular",
    "awesome",
    "boilerplate",
    "browser-extensions",
    "cordova",
    "cross-platform",
    "firebase",
    "mblabs",
    "megabytelabs",
    "menubar",
    "npm",
    "package",
    "professormanhattan",
    "washingtondc",
    "webapp"
  ],
  "engines": {
    "node": ">=14.18.0"
  },
  "publishConfig": {
    "access": "public"
  },
  "blueprint": {
    "description": "Common Angular files and awesome boilerplate code that feeds a large group of repositories",
    "emoji_end": "üî•‚ù§Ô∏èü§ñ",
    "emoji_start": "",
    "group": "common",
    "name": "Angular Common",
    "overview": "This repository is home to common Angular files as well as boilerplate code for new projects. This repository hosts files that are shared to all our downstream Angular projects (and perhaps yours as well, if you like). There is also boilerplate code that is added to a project if there is no file structure yet. The boilerplate code is amazing. Create browser extensions, Cordova apps, menubars, Electron apps, and more with a single codebase.",
    "profile": {
      "npmjs_organization": "installdoc"
    },
    "repository": {
      "github": "https://github.com/ProfessorManhattan/common-angular",
      "gitlab": "https://gitlab.com/megabyte-labs/common/angular"
    },
    "slug": "common-angular",
    "subgroup": "angular",
    "title": "Angular Common Files and Boilerplate Code"
  },
  "commitlint": {
    "extends": [
      "@commitlint/config-conventional"
    ],
    "helpUrl": "https://megabyte.space/docs/contributing/commits"
  },
  "eslintConfig": {
    "extends": "eslint-config-strict-mode",
    "rules": {
      "import/no-extraneous-dependencies": "off",
      "import/no-unresolved": "off",
      "woke/all": "off"
    }
  },
  "funding": [
    {
      "type": "opencollective",
      "url": "https://opencollective.com/megabytelabs"
    },
    {
      "type": "patreon",
      "url": "https://www.patreon.com/ProfessorManhattan"
    }
  ],
  "lint-staged": {
    "**/*": [
      "blocklint --wordlist blacklist,slave,whitelist",
      "check-merge-conflict",
      "check-added-large-files",
      "check-symlinks",
      "destroyed-symlinks"
    ],
    "**/*.(css|html|less|md|mjml|php|scss|sh|xml)": [
      "task fix:prettier --"
    ],
    "**/*.(jpg|png)": [
      "task image:compress --"
    ],
    "**/*.(js|jsx|ts|tsx)": [
      "task fix:js --",
      "task lint:js --"
    ],
    "**/*.json": [
      "task fix:json --"
    ],
    "**/*.sh": [
      "task lint:shell --"
    ],
    "**/*.toml": [
      "task lint:toml --"
    ],
    "**/*.xml": [
      "task fix:xml --",
      "task lint:xml --"
    ],
    "**/*.yml": [
      "task fix:yaml --",
      "task lint:yaml --"
    ],
    "logo.png": [
      "task image:resize -- 200 200",
      "task image:compress --"
    ]
  },
  "prettier": "@washingtondc/prettier",
  "release": {
    "branches": [
      "master",
      "next"
    ],
    "extends": "@washingtondc/release"
  }
}
